.slider
  margin-bottom: 40px
  display:grid
  grid-template-columns:1fr
  &__radio
    column-gap: 5px;
    display: flex

.radio
  &__inner-wrap
     display: inline-block
     width: 100%;
     max-width: 20px;
     max-height: 20px;
     height: 100%;
     justify-content: center;
     align-self: flex-end;
  &__label
     max-width: 20px
     min-width: 10px
     min-height: 10px
     max-height: 20px
     display: inline-block
     width: 100%
     height: 100%
  &__input + &__label:before
     content:""
     display: inline-block
     width: 100%
     height: 100%
     border-radius 50%
     background-color: transparent;
     border 2px solid #fff;
  &__input:not(:checked)+&__label:hover::before
    border:2px solid #00a32a
  &__input:checked + &__label:before
     background-color: #008000
     transition:all 0.4s ease


.slide
  text-align: center
  width: 100%
  max-width:640px
  margin:0 auto
  position: relative
  display grid
  grid-template-rows: 500px min-content min-content;
  @media screen and (max-width:480px)
    grid-template-rows: 300px min-content min-content;
  &__title
     font: 700 57px/60px "robotoblack",sans-serif
     align-self:end
     margin-bottom: 20px
     @media screen and (max-width:600px)
       font: 700 33px/40px "robotoblack",sans-serif
  &__image
    background-image url('../images/content/1.png')
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    position: absolute
    z-index: -1
    background-size: contain;
  &__gradient
    background:radial-gradient(circle, rgba(255,255,255,0.5), transparent 65%)
    position: absolute
    width: 100%
    height: 100%
    z-index: -2;
    display: flex;
    justify-self: center;
    align-self: center;
  &__button
    justify-self center
    @media screen and (max-width:600px)
      font: 700 22px/30px "robotoblack",sans-serif
    @media screen and (max-width:360px)
      font: 700 18px/20px "robotoblack",sans-serif
      padding: 5px 15px

