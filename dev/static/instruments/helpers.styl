div,
ul,
li,
section,
input,
span,
a,
nav,
aside,
html,
body
  margin: 0;
  padding: 0;
ul
  list-style none
.visuallyHidden
  visibility hidden
  position: absolute;
  clip: rect(0 0 0 0);
  width: 1px;
  height: 1px;
  margin: -1px;
.displayNone
  display: none
.page
  background-color: $page-color
  color #fff
  height: 100%
.page-body
  display grid
  grid-template-rows min-content 1fr min-content
  min-height: 100%

.wrapper
  width: 100%
  margin: 0 auto
  padding:10px 27px
  box-sizing border-box
  //max-width: 1200px
.index-columns
  display:grid;
  grid-template-columns:1fr 1fr
  column-gap: 26px
  @media screen and (max-width: 700px)
    grid-template-columns 1fr
    row-gap:26px
.button
  border:none
  -webkit-border-radius: 30px
  -moz-border-radius: 30px
  border-radius: 30px
  background: linear-gradient(to bottom, #f26843, #e74a35)
  box-shadow 0 1px 1px 0 #ac1000
  color:#fff;
  font:700 31px/31px "robotobold",sans-serif
  text-align: center
  padding: 15px 40px
  display: inline-block
  cursor: pointer
  &:active
    background:linear-gradient(to top, #f26843, #e74a35)
    box-shadow:inset 0 1px 1px 0 #ac1000

